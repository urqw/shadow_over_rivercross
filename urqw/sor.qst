:rnd()
число=до-от+1
proc rnd
рнд=рнд+от-1
end

:rnd
рнд=rnd*число+1
i=0
:rnd_loop
i=i+1
if рнд>i and рнд<(i+1) then рнд=i
if i<число then goto rnd_loop
end
